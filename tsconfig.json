{
  "compilerOptions": {
    "target": "ES2022",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "lib": [
      "ES2022",
      "DOM"
    ],
    "types": [
      "node",
      "vscode"
    ],
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "src",
    "outDir": "out",
    "sourceMap": true
  },
  "exclude": [
    "node_modules",
    "out"
  ]
}